extends layout

block content

	.container
		.row
			.col-md-4.col-md-offset-4.text-center.blog-title
				h1= post.title
				h4
					small
						em Published on #{post.published.toDateString().slice(0,10)} 
				h5
					small	
						em  by #{post.author}

		.row
			.col-md-6.col-md-offset-3.blog-content
				p= post.content


	footer
		hr
		.row
			.col-md-4.col-md-offset-4.text-center
				a(href="/blog")	
					button.btn.btn-lg.btn-primary Volver al blog
		p
		hr			
		.row
			.col-md-6.col-md-offset-3.text-center
				ul.list-inline
					li
						a(href="https://www.facebook.com/zefiraat", target="_blank")
							i.icon-facebook.icon-2x
							

					li
						a(href="https://twitter.com/ZefiraATotal", target="_blank")
							i.icon-twitter.icon-2x
					li
						a(href="https://twitter.com/ZefiraATotal", target="_blank")
							i.icon-instagram.icon-2x
					li
						a(href="https://plus.google.com/114037709702303495774", rel="publisher", target="_blank")
							i.icon-google-plus.icon-2x

				hr
				p Todos los derechos Reservados &copy; Zefira Acceso Total 2013	
										
