extends layout

block content

	.container
		.row
			.col-md-4.col-md-offset-4.text-center.blog-title
				h1= post.title
				h4
					small
						em by #{post.author}
		.row
			.col-md-6.col-md-offset-3.blog-content
				p= post.content


	footer
		hr
		.row
			.col-md-4.col-md-offset-4.text-center
				a(href="/blog")	
					button.btn.btn-lg.btn-primary Volver al blog
