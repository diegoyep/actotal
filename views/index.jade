extends layout

block content
	a#menu-toggle.btn.btn-primary.btn-lg.toggle(href="#")
		i.icon-reorder

	#sidebar-wrapper
		ul.sidebar-nav
			a#menu-close.btn.btn-default.btn-lg.pull-right.toggle
				i.icon-remove
			li.sidebar-brand
				a Acceso Total
			li
				a(href="/faq") Que es Acceso Total?
				a(href="/blog") Blog
				a(href="#form-pre")	Unete
				hr
				a(href="/terms") Terminos de servicio	 
	#top.header
		.vert-text
			img(src="/images/main.png")
			h3(style="color:white") Ingresa a tus discotecas favoritas sin hacer colas ni pagar entradas
			.container
				.row
					.col-md-6.col-md-offset-3.text-center
						h4(style="color:white") 
							em Unete a la lista de espera solo con tu correo electronico 
						br	
						h4(style="color:white")  Inicio pre-venta 15 noviembre | Fiesta de lanzamiento 14 de Diciembre	
						hr
				.row
					.col-md-4.col-md-offset-4.text-center
						.service-item
							form(action='/invite/new', method='post')
								
								input.form-control(type="text", placeholder="Email", name="email", required)
								br
								.col-md-2.col-md-offset-1
									input.btn.btn-lg.btn-primary(type="submit", value="Unete")
								.col-md-2.col-md-offset-2			
									a.btn.btn-primary.btn-lg(href="#intro") Averigua mas
								p			
	#intro.intro
		.container
			.row
				.col-md-6.col-md-offset-3.text-center
					h2  Con Zefira "Acceso Total" puedes entrar a todas nuestras discotecas mostrando solamente tu tarjeta
					p.lead No mas colas, no mas entradas
					a.btn.btn-lg.btn-primary(href="#services") Mira que beneficios trae			


	#services.services
		.container
			.row
				.col-md-4.col-md-offset-4.text-center
					h2 Beneficios
			.row
				.col-md-2.col-md-offset-2.text-center
					.service-item
					i.service-icon.icon-time
					h4 Olvida las colas
					p Con acceso Total, ingresas directamente mostrando tu tarjeta en la puerta de la disco. 	
			
				.col-md-2.text-center
					.service-item
					i.service-icon.icon-magnet
					h4 Ingreso Libre
					p Olvidate de pagar por entrar a divertirte. No mas listas
			
				.col-md-2.text-center
					.service-item
					i.service-icon.icon-shield
					h4 Lleva a tu gente
					p Ingresa con tus amigos y pasala de la puta mare
			
				.col-md-2.text-center
					.service-item
					i.service-icon.icon-pencil
					h4 Beneficios Exclusivos
					p Gold, Silver y Platinum, tu escoges a donde y que es lo que quieres

			
			.row
				.col-md-4.col-md-offset-4.text-center
					a.btn.btn-lg.btn-primary(href="#prices") Precios


	#prices.callout
		.container.precios
			.row
				.col-md-6.col-md-offset-3.text-center
					h3(style="color:black") Productos
					hr
			.row 
				.col-md-4.col-md-offset-2.text-center
					h3 Basico
					h4 S./ 199
					.col-md-8.col-md-offset-2
						p Ingreso libre a todas las discotecas del programa, sin colas ni entradas
				.col-md-4.text-center
					h3 Premium
					h4 S./ 699
					.col-md-8.col-md-offset-2
						p Ingreso libre a todas las discotecas del programa, sin colas ni entradas
						p + descuentos
						p + promociones
						p + cortesias exclusivas
						p y mucho mas!!!

			.row
				hr				
				.col-md-2.col-md-offset-2.text-center
					a.btn.btn-primary.btn-lg(href="#form-pre") Unete
					
				.col-md-6.text-center
					
					a.btn.btn-primary.btn-lg(href="/faq") No fue suficiente? Revisa nuestras preguntas mas frecuentes
				.col-md-8.col-md-offset-2
					hr
				p	

	#form-pre.services
		.container
			.row
				.col-md-6.col-md-offset-3.text-center
					h3 Unete a la lista de espera solo con tu correo electronico 
					hr
			.row
				.col-md-4.col-md-offset-4.text-center
					.service-item
						form(action='/invite/new', method='post')
							
							input.form-control(type="text", placeholder="Email", name="email")
							br
							input.btn.btn-lg.btn-primary(type="submit", value="Unete")
			.row
				.col-md-6.col-md-offset-3.text-center
					h2 Inicio pre-venta: 15 de noviembre				

	footer
		.container
			.row
				.col-md-6.col-md-offset-3.text-center
					ul.list-inline
						li
							i.icon-facebook.icon-2x
						li
							i.icon-twitter.icon-2x
						li
							i.icon-instagram.icon-2x
						li
							i.icon-google-plus.icon-2x

					hr
					p Todos los derechos Reservados &copy; Zefira Acceso Total 2013


	script(src="/js/jquery.js")
	script(src="/js/bootstrap.js")
	script(src="/js/jquery.validate.min.js")
	script(src="/js/mine.js")

						