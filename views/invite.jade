extends layout

block content
	#fb-root
	script
		(function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) return;
		js = d.createElement(s); js.id = id;
		js.src = "//connect.facebook.net/es_ES/all.js#xfbml=1&appId=516873428402136";
		fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	script
		!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');	
	#top.header
		.vert-text
			
			- if (user) {
				img(src="/images/main.png")
				h1= user.email
				a(href="/queue/" + encodeURIComponent(user._id) ) Click para ver tus descuentos
				
				br
				a#share_button(href="#")
					img(width="92", height="22", src="/images/compartir-facebook.png", alt="Compartir en Facebook")


				a.twitter-share-button(data-via="ZefiraATotal", data-text="Check out this" ,data-lang="es", href="https://twitter.com/share", data-hashtags="zefira,diversion")	Twittear

			- } else {
				#form-pre.services
					.container
						.row
							.col-md-6.col-md-offset-3.text-center
								h3 Preordena solo con tu correo electronico 
								hr
						.row
							.col-md-4.col-md-offset-4.text-center
								.service-item
									form(action='/invite/new', method='post')
							
										input.form-control(type="text", placeholder="Email", name="email")
										br
										input.btn.btn-lg.btn-primary(type="submit", value="Preordena")
			-	}						


	footer
		.container
			.row
				.col-md-6.col-md-offset-3.text-center

					.fb-like(data-href="https://www.facebook.com/zefirapay", data-width="111", data-heigth="25", data-colorscheme="light", data-layout="standar", data-action="like", data-show-faces="true", data-send="false")
					a.twitter-follow-button(href="https://twitter.com/ZefiraATotal", data-show-count="false", data-lang="es") Seguir a ZefiraATotal
			.row
				.col-md-6.col-md-offset-3.text-center

