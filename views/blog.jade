extends layout

block content
	.services.shift
		.container
			.row
				.col-md-4.col-md-offset-4.text-center
					img(src="/images/main-small.jpeg")
	
	.container				
		.row
			.col-md-4.col-md-offset-4.text-center
				h2.blog-header Publicaciones recientes
					hr
		.row
			.col-md-4.col-md-offset-4.text-center.blog-list
				- if (posts)	{
					each val in posts
						.col-md-8.col-md-offset-2.text-center
							a(href="/blog/show/#{val.slug}")= val.title
				-	} else {
					p No hay nuevas publicaciones
		
				- }
		hr
		.row
			.col-md-4.col-md-offset-4.text-center
				a(href='/').btn.btn-lg.btn-primary Volver 			
		

	footer
		.container
			.row
				.col-md-6.col-md-offset-3.text-center
					ul.list-inline
						li
							i.icon-facebook.icon-2x
						li
							i.icon-twitter.icon-2x
						li
							i.icon-instagram.icon-2x
						li
							i.icon-google-plus.icon-2x

					hr
					p Todos los derechos Reservados &copy; Zefira Acceso Total 2013	
									
	